<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <h2>ðŸ‘¤ Profile</h2>

        <!-- Profile navigation -->
        <nav class="profile-nav">
          <ul class="nav nav-tabs border-0">
            <li class="nav-item">
              <a class="nav-link active" href="/profile">
                Personal Data
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile/messages">
                Messages
                <% if (unreadMessages > 0) { %>
                  <span class="message-badge"><%= unreadMessages %></span>
                <% } %>
              </a>
            </li>
          </ul>
        </nav>

        <!-- Success/Error messages -->
        <% if (message) { %>
          <div class="alert alert-success alert-dismissible fade show">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Personal Data Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h4>Update Personal Information</h4>
          </div>
          <div class="card-body">
            <form method="POST" action="/profile/update">
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="name" 
                  name="name" 
                  value="<%= user.name %>" 
                  required
                >
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input 
                  type="email" 
                  class="form-control" 
                  id="email" 
                  name="email" 
                  value="<%= user.email %>" 
                  required
                >
              </div>

              <div class="mb-3">
                <label class="form-label">Role</label>
                <input 
                  type="text" 
                  class="form-control" 
                  value="<%= user.role %>" 
                  readonly
                  disabled
                >
                <div class="form-text">Only admins can modify roles.</div>
              </div>

              <button type="submit" class="btn btn-primary">
                Save Changes
              </button>
            </form>
          </div>
        </div>

        <!-- Password Change Section -->
        <div class="card password-section mb-4">
          <div class="card-header bg-warning text-dark">
            <h4>ðŸ”’ Change Password</h4>
          </div>
          <div class="card-body">
            <form method="POST" action="/profile/update-password">
              <div class="mb-3">
                <label for="currentPassword" class="form-label">Current Password</label>
                <input 
                  type="password" 
                  class="form-control" 
                  id="currentPassword" 
                  name="currentPassword" 
                  required
                  placeholder="Enter your current password"
                >
              </div>

              <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input 
                  type="password" 
                  class="form-control" 
                  id="newPassword" 
                  name="newPassword" 
                  minlength="6"
                  required
                  placeholder="Enter new password (min 6 chars)"
                >
                <div class="form-text">Minimum 6 characters</div>
              </div>

              <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                <input 
                  type="password" 
                  class="form-control" 
                  id="confirmPassword" 
                  name="confirmPassword" 
                  minlength="6"
                  required
                  placeholder="Confirm your new password"
                >
              </div>

              <button type="submit" class="btn btn-warning">
                ðŸ”‘ Update Password
              </button>
            </form>
          </div>
        </div>

        <!-- Quick Stats -->
        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-body text-center">
                <h5 class="card-title">ðŸ“¬ Messages</h5>
                <p class="card-text">
                  <% if (unreadMessages > 0) { %>
                    <span class="text-danger"><%= unreadMessages %> unread</span>
                  <% } else { %>
                    <span class="text-success">No new messages</span>
                  <% } %>
                </p>
                <a href="/profile/messages" class="btn btn-outline-primary btn-sm">
                  View Messages
                </a>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card">
              <div class="card-body text-center">
                <h5 class="card-title">ðŸ“š My Borrows</h5>
                <p class="card-text">View your borrowing history</p>
                <a href="/my-borrows" class="btn btn-outline-primary btn-sm">
                  View Borrows
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-4">
          <a href="/" class="btn btn-secondary">
            Back to Homepage
          </a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/enhanced-ui.js"></script>
</body>
</html>
