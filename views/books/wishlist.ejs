<div class="container my-5">
  <h1 class="mb-4">My Wishlist</h1>

  <% if (books.length === 0) { %>
    <p class="text-muted">You haven't added any books to your wishlist yet.</p>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% books.forEach(book => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <% if (book.cover) { %>
              <img src="/uploads/<%= book.cover %>" class="card-img-top" alt="Cover" style="height: 300px; object-fit: cover;">
            <% } %>
            <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                <p class="card-text"><strong>Year:</strong> <%= book.year %></p>
                <a href="/books/<%= book.isbn %>" class="btn btn-primary w-100 mb-2">ðŸ“– View details</a>
              
                <form action="/wishlist/<%= book.isbn %>/delete" method="POST">
                  <button class="btn btn-outline-danger w-100">Remove</button>
                </form>
              </div>
              
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
